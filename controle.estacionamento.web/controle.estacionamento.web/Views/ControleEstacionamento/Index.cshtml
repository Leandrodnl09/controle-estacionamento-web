@model List<ControlePermanenciaCarrosModel>

@{
    var modelos = (List<CarrosModeloModel>)ViewData["Modelo"];

    var parametro = Context.Request.Query["Message"].ToString();

    var alertSucces = parametro == "Ok";
    var alertError = parametro == "NOk";
}

@if (alertSucces)
{
    <div class="sufee-alert alert with-close alert-success alert-dismissible fade show">
        <span class="badge badge-pill badge-success">Success</span>
        Realizado com sucesso!
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
else if (alertError)
{
    <div class="sufee-alert alert with-close alert-danger alert-dismissible fade show">
        <span class="badge badge-pill badge-danger">Error</span>
        Erro ao salvar!
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}

<div class="col-lg-9">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Controle Permanência</strong>
        </div>
        <div class="card-body">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Placa</th>
                        <th scope="col">Modelo</th>
                        <th scope="col">Entrada</th>
                        <th scope="col">Saida</th>
                        <th scope="col">Valor</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var modelo in Model)
                    {
                        <tr>
                            <th scope="row">@modelo.Id</th>
                            <td>@modelo.Placa</td>
                            <td>@(modelos.Where(m => m.Id == modelo.IdModelo).First().Modelo)</td>
                            <td>@modelo.DataHoraEntrada</td>
                            <td>@(modelo.DataHoraSaida == null ? "Em aberto" : modelo.DataHoraSaida)</td>
                            <td>
                                @if (modelo.DataHoraSaida != null)
                                {
                                    var horas = (modelo.DataHoraSaida - modelo.DataHoraEntrada).Value.TotalHours;
                                    if (horas <= 0.59)
                                    {
                                        horas = 1.00;
                                        modelo.Valor = horas * 5.00;
                                    }
                                    else
                                    {
                                        horas = Math.Ceiling(horas);
                                        modelo.Valor = horas * 5.00;
                                    }
                                }
                                @String.Format("{0:C}", modelo.Valor)
                            </td>
                            <td class="d-flex">
                                @if (modelo.DataHoraSaida == null)
                                {
                                    <a href="@Url.ActionLink("Close", "ControleEstacionamento", new { id = modelo.Id })" class="btn btn-danger btn-sm mr-2">Finalizar</a>
                                    <span class="button-separator mr-2">|</span>
                                    <button class="btn btn-primary btn-sm" onclick="imprimir('@modelo.Id')">Imprimir</button>
                                }
                                else
                                {
                                    <button class="btn btn-danger btn-sm mr-2" disabled>Finalizar</button>
                                    <span class="button-separator mr-2">|</span>
                                    <button class="btn btn-primary btn-sm" onclick="imprimir('@modelo.Id')">Imprimir</button>
                                }
                            </td>

                            <div id="infoModelo-@modelo.Id" style="display: none;">
                                <p>Placa: @modelo.Placa</p>
                                <p>Modelo: @modelo.IdModelo</p>
                                <p>Hora entrada: @modelo.DataHoraEntrada</p>
                                @if (modelo.DataHoraSaida == null)
                                {
                                    <p>Hora saída: Em aberto</p>
                                    <p>Valor: Em aberto</p>
                                }
                                else
                                {
                                    <p>Hora saída: @modelo.DataHoraSaida</p>
                                    <p>@String.Format("{0:C}", modelo.Valor)</p>
                                }
                            </div>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-lg-3">
    <div class="card">
        <div class="card-header">
            <strong>Nova Entrada</strong>
        </div>
        <div class="card-body card-block">
            <form action="@Url.Action("Create","ControleEstacionamento")" method="post" class="">
                <div class="form-group">
                    <label for="modelo" class="form-control-label">Placa</label>
                    <input type="text" id="placa" name="placa" placeholder="Placa do carro..." class="form-control">
                </div>
                <div class="form-group">
                    <label for="marca" class="form-control-label">Modelo</label>
                    <select class="form-control" name="idModelo" id="idModelo">
                        @{
                            foreach (var item in modelos)
                            {
                                <option value="@item.Id">@item.Modelo</option>
                            }
                        }
                    </select>

                </div>
                <div class="form-group">
                    <label for="ano" class="form-control-label">DataHoraEntrada</label>
                    <input type="datetime-local" id="dataHoraEntrada" name="dataHoraEntrada" placeholder="Data e hora de entrada" class="form-control" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa fa-dot-circle-o"></i> Cadastrar
                    </button>
                    <button type="reset" class="btn btn-danger btn-sm">
                        <i class="fa fa-ban"></i> Cancelar
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer">
        </div>
    </div>
</div>   